<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/bt1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/boder1"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNumber">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">


        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/bt1on"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/image1"
            android:layout_alignStart="@+id/image1"
            android:layout_alignTop="@+id/bt1off"
            android:background="@drawable/togleon"
            android:text="" />

        <Button
            android:id="@+id/bt1off"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/image1"
            android:layout_alignRight="@+id/image1"
            android:layout_below="@+id/image1"
            android:background="@drawable/togleofff"
            android:text="" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ledtatt" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bt2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/boder1"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btok">

        <Button
            android:id="@+id/bt2on"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/image2"
            android:layout_alignStart="@+id/image2"
            android:layout_below="@+id/image2"
            android:background="@drawable/togleon"
            android:text="" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ledtatt" />

        <Button
            android:id="@+id/bt2off"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/image2"
            android:layout_alignRight="@+id/image2"
            android:layout_below="@+id/image2"
            android:background="@drawable/togleofff"
            android:text="" />


    </RelativeLayout>

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="210dp"
        android:layout_height="43dp"
        android:layout_marginBottom="144dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <WebView
        android:id="@+id/loadad"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginBottom="177dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="40dp"
        android:text="IP Server"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintEnd_toStartOf="@+id/editNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btok"
        android:layout_width="66dp"
        android:layout_height="36dp"
        android:layout_marginBottom="127dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="9dp"
        android:text="OK"
        app:layout_constraintBottom_toTopOf="@+id/bt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNumber" />

</android.support.constraint.ConstraintLayout>